generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  dni       String    @unique
  fullName  String
  role      UserRole? @default(USER)
  email     String    @unique
  password  String   
  phone     String?
  address   String?
  country   String?
  coupons   Coupon[]
  
  create_at DateTime  @default(now())
  update_at DateTime  @default(now())
}

model Coupon {
  id          String   @id @default(uuid())
  code        String   @unique
  discount    Int
  type        String   @default("percent")
  expires_at  DateTime
  used        Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  create_at   DateTime @default(now())  
  update_at   DateTime @default(now())
}

model Movie {
  id        Int     @id @default(autoincrement())
  title     String
  genre     String
  available Boolean @default(true)
}

enum UserRole {
  ADMIN
  OPERATOR
  USER
  VISITOR
}

enum UserDocument {
  CC
  CE
  RC
  PASSPORT  
  OTHER 
}