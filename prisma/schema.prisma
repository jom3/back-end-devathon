generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  fullName  String
  email     String   @unique
  phone     String?
  address   String?
  country   String?
  role      Role     @default(USER)
  create_at DateTime @default(now())
  update_at DateTime @default(now())
  password  String
}

enum Role {
  USER
  ADMIN
}
